{"ast":null,"code":"import \"./assets/tailwind.css\";\nimport { computed, ref, watchEffect } from \"vue\";\nimport axios from 'axios';\nexport default {\n  name: \"App\",\n  setup() {\n    const coins = ref([]);\n    const cloneCoins = ref([]);\n    const search = ref('');\n    // api call\n    const retrieveCoins = async () => {\n      try {\n        const response = await axios.get(\n        // \"http://localhost:8085/crypto/api/v1/coin/market\"\n        \"http://localhost:8095/crypto/coingecko/v1/coin/market\");\n        coins.value = response.data;\n      } catch (err) {\n        console.log(err);\n      }\n    };\n    // fetch timer, invoke backend service in every 100 seconds \n    setInterval(() => {\n      retrieveCoins();\n    }, 100000);\n    // 10 items for marquee\n    const tenCoins = computed(() => {\n      return coins.value.slice(0, 10);\n    });\n    // cloneCoins\n    watchEffect(() => {\n      const dup = coins.value.slice(0, 5);\n      cloneCoins.value = dup;\n    });\n    // search\n    const matchedNames = computed(() => {\n      return coins.value.filter(coin => coin.id.includes(search.value));\n    });\n    retrieveCoins(); // initial load\n    return {\n      tenCoins,\n      cloneCoins,\n      matchedNames,\n      search\n    };\n  }\n};","map":{"version":3,"names":["computed","ref","watchEffect","axios","name","setup","coins","cloneCoins","search","retrieveCoins","response","get","value","data","err","console","log","setInterval","tenCoins","slice","dup","matchedNames","filter","coin","id","includes"],"sources":["/Users/oscarlo/github/bc2303-assignment/frontend-vue/src/components/App.vue"],"sourcesContent":["<template>\n  <!-- ============ Marquee ============ -->\n  <div class=\"marquee w-full h-12 overflow-hidden position-relative\">\n    <ul class=\"marquee-content h-full flex\" ref=\"mq\">\n      <!-- main -->\n      <!-- 1 -->\n      <li class=\"flex justify-center items-center flex-shrink-0 text-white transform scale-75 lg:scale-100\"\n        v-for=\"coin in tenCoins\" :key=\"coin.name\">\n        <div class=\"flex justify-between w-3/4\">\n          <!-- ticker -->\n          <div class=\"flex items-center\">\n            <img :src=\"coin.image\" alt=\"coin logo\" class=\"w-4 h-4 lg:w-6 lg:h-6 rounded-full mr-4 object-cover\" />\n            <div class=\"hidden lg:block\">\n              <p class=\"font-bold\">{{ coin.name }}</p>\n              <p class=\"text-xs uppercase tracking-widest \">\n                {{ coin.symbol }}\n              </p>\n            </div>\n          </div>\n          <!-- price -->\n          <div>\n            <p class=\"font-bold text-xs lg:text-base flex justify-end \">\n              {{ $filters.comma_separator(coin.current_price) }}\n            </p>\n            <!-- percent red -->\n            <p class=\"font-bold text-xs text-red-400 flex justify-end items-center \"\n              v-if=\"$filters.price_negative(coin.price_change_percentage_24h)\">\n              <fa icon=\"caret-down\" class=\"mr-1\" />\n              {{ $filters.string_trunc(coin.price_change_percentage_24h, 5) }}%\n            </p>\n            <!-- percent green -->\n            <p v-else class=\"font-bold text-xs text-green-400 flex justify-end items-center \">\n              <fa icon=\"caret-up\" class=\"mr-1\" />\n              {{ $filters.string_trunc(coin.price_change_percentage_24h, 5) }}%\n            </p>\n          </div>\n        </div>\n      </li>\n\n      <!-- clones -->\n      <!-- 1 -->\n      <li class=\"flex justify-center items-center flex-shrink-0 text-white transform scale-75 lg:scale-100\"\n        v-for=\"coin in cloneCoins\" :key=\"coin.name\">\n        <div class=\"flex justify-between w-3/4\">\n          <!-- ticker -->\n          <div class=\"flex items-center\">\n            <img :src=\"coin.image\" alt=\"coin logo\" class=\"w-4 h-4 lg:w-6 lg:h-6 rounded-full mr-4 \" />\n            <div class=\"hidden lg:block\">\n              <p class=\"font-bold\">{{ coin.name }}</p>\n              <p class=\"text-xs uppercase tracking-widest\">\n                {{ coin.symbol }}\n              </p>\n            </div>\n          </div>\n          <!-- price -->\n          <div>\n            <p class=\"font-bold flex justify-end text-xs lg:text-base\">\n              {{ $filters.comma_separator(coin.current_price) }}\n            </p>\n            <!-- percent red -->\n            <p class=\"font-bold text-xs text-red-400 flex justify-end items-center \"\n              v-if=\"$filters.price_negative(coin.price_change_percentage_24h)\">\n              <fa icon=\"caret-down\" class=\"mr-1\" />\n              {{ $filters.string_trunc(coin.price_change_percentage_24h, 5) }}%\n            </p>\n            <!-- percent green -->\n            <p v-else class=\"font-bold text-xs text-green-400 flex justify-end items-center \">\n              <fa icon=\"caret-up\" class=\"mr-1\" />\n              {{ $filters.string_trunc(coin.price_change_percentage_24h, 5) }}%\n            </p>\n          </div>\n        </div>\n      </li>\n    </ul>\n  </div>\n  <!-- ============ Table ============ -->\n  <div class=\"container mx-auto pt-18 px-2\">\n\n    <!-- table -->\n    <table class=\"table-fixed cursor-pointer\">\n      <caption class=\"table-title font-bold text-gray-700  pb-2\">Cryptocurrency Exchange - Top 20 (Market Cap)</caption>\n      <!-- head -->\n      <thead>\n        <tr class=\"relative text-left text-gray-600 text-sm\">\n          <td class=\"p-2\">\n            Search:\n            <input type=\"text\" placeholder=\"Coin Name ...\" class=\"border border-gray-500 rounded p-2\" v-model=\"search\" />\n          </td>\n        </tr>\n        <tr class=\"text-left bg-gray-100 text-gray-600 text-sm\">\n          <th class=\"w-1/4 p-4\">Coin Name</th>\n          <th class=\"w-1/4\">Market Price(Real Time)</th>\n          <th class=\"w-1/4\">Change%(24 Hours)</th>\n          <th class=\"w-1/4 hidden sm:table-cell\">Trading Volume</th>\n          <th class=\"w-1/4 hidden sm:table-cell\">Market Capitalization</th>\n        </tr>\n      </thead>\n\n      <!-- body -->\n      <tbody class=\"divide-y\">\n        <!-- 1 -->\n        <tr class=\"text-sm hover:bg-gray-100 transition duration-300\" v-for=\"coin in matchedNames\" :key=\"coin.name\">\n          <td class=\"p-4 flex items-center\">\n            <p class=\"mr-2\">{{ coin.market_cap_rank }}</p>\n            <img :src=\"coin.image\" alt=\"coin logo\" class=\"w-7 h-7 rounded-full mr-1\" />\n            <p class=\"font-bold p-1 mr-1\">{{ coin.name }}</p>\n            <p class=\"uppercase text-gray-500 hidden sm:table-cell\">\n              {{ coin.symbol }}\n            </p>\n          </td>\n          <td class=\"font-bold text-gray-600\">\n            ${{ $filters.comma_separator(coin.current_price) }}\n          </td>\n          <td class=\" font-bold\">\n            <div class=\"text-red-500\" v-if=\"$filters.price_negative(coin.price_change_percentage_24h)\">\n              <fa icon=\"caret-down\" class=\"mr-1\" />{{ coin.price_change_percentage_24h }}%\n            </div>\n            <div v-else class=\"text-green-500\">\n              <fa icon=\"caret-up\" class=\"mr-1\" />{{ coin.price_change_percentage_24h }}%\n            </div>\n          </td>\n          <td class=\"hidden sm:table-cell\">\n            <p style=\"color:rgb(26, 137, 165)\">{{ $filters.comma_separator(coin.total_volume) }} </p>\n          </td>\n          <td class=\"pr-10 hidden sm:table-cell\">\n            <p style=\"color:rgb(26, 137, 165)\">${{ $filters.comma_separator(coin.market_cap) }} </p>\n          </td>\n        </tr>\n      </tbody>\n    </table>\n  </div>\n</template>\n\n<script>\nimport \"./assets/tailwind.css\";\nimport { computed, ref, watchEffect } from \"vue\";\n\nimport axios from 'axios'\nexport default {\n  name: \"App\",\n  setup() {\n    const coins = ref([]);\n    const cloneCoins = ref([]);\n    const search = ref('')\n    // api call\n    const retrieveCoins = async () => {\n      try {\n        const response = await axios.get(\n          // \"http://localhost:8085/crypto/api/v1/coin/market\"\n          \"http://localhost:8095/crypto/coingecko/v1/coin/market\"\n        );\n        coins.value = response.data;\n      } catch (err) {\n        console.log(err);\n      }\n    };\n    // fetch timer, invoke backend service in every 100 seconds \n    setInterval(() => {\n      retrieveCoins();\n    }, 100000);\n    // 10 items for marquee\n    const tenCoins = computed(() => {\n      return coins.value.slice(0, 10);\n    });\n    // cloneCoins\n    watchEffect(() => {\n      const dup = coins.value.slice(0, 5);\n      cloneCoins.value = dup;\n    });\n    // search\n    const matchedNames = computed(() => {\n      return coins.value.filter((coin) => coin.id.includes(search.value));\n    });\n    retrieveCoins(); // initial load\n    return { tenCoins, cloneCoins, matchedNames, search };\n  },\n};\n</script>\n\n<style>\n#app {\n  -webkit-font-smoothing: antialiased;\n  -moz-osx-font-smoothing: grayscale;\n}\n\n.marquee-content {\n  animation: scrolling 25s linear infinite;\n}\n\n.marquee-content li {\n  width: 19%;\n}\n\n.table-title {\n  font-size: 30px;\n  bottom: 30;\n  height: 1.5em;\n}\n\n.marquee:before,\n.marquee:after {\n  position: absolute;\n  top: 0;\n  width: 10rem;\n  height: 3em;\n  content: \"\";\n  z-index: 1;\n}\n\n.marquee {\n  background: rgb(6, 78, 107);\n}\n\n.marquee:before {\n  left: 0;\n  background: linear-gradient(to right, rgb(26, 137, 165) 0%, transparent 30%);\n}\n\n.marquee:after {\n  right: 0;\n  background: linear-gradient(to left, rgb(26, 137, 165) 0%, transparent 30%);\n}\n\n@keyframes scrolling {\n  0% {\n    transform: translateX(0);\n  }\n\n  100% {\n    transform: translateX(-100%);\n  }\n}\n</style>\n"],"mappings":"AAsIA,OAAO,uBAAuB;AAC9B,SAASA,QAAQ,EAAEC,GAAG,EAAEC,WAAU,QAAS,KAAK;AAEhD,OAAOC,KAAI,MAAO,OAAM;AACxB,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,